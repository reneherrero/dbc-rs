#!/bin/bash
# Pre-commit hook to run quality checks before allowing commits
#
# This hook ensures that code quality checks pass before commits are made.
# It runs tests, clippy, and formatting checks on all packages and feature combinations.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo -e "${RED}Error: cargo not found. Please install Rust toolchain.${NC}"
    exit 1
fi

# Get the repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# Ensure latest stable clippy is available (for better linting)
echo -e "${YELLOW}Ensuring latest stable clippy is available...${NC}"
if ! rustup run stable cargo clippy --version &> /dev/null; then
    echo -e "${YELLOW}Installing latest stable toolchain with clippy...${NC}"
    rustup toolchain install stable --component clippy || {
        echo -e "${RED}Error: Failed to install stable toolchain with clippy.${NC}"
        exit 1
    }
fi

# Track if any checks failed
FAILED=0

# Run clippy on dbc-rs using latest stable (for better linting)
echo -e "\n${YELLOW}Running clippy on dbc-rs (using latest stable)...${NC}"
if rustup run stable cargo clippy --all-targets -p dbc-rs -- -D warnings 2>&1; then
    echo -e "${GREEN}✓ dbc-rs clippy check passed${NC}"
else
    echo -e "${RED}✗ dbc-rs clippy check failed${NC}"
    FAILED=1
fi

# Run clippy on dbc-rs in no_std mode
echo -e "\n${YELLOW}Running clippy on dbc-rs (no_std mode)...${NC}"
if rustup run stable cargo clippy --no-default-features --target thumbv7m-none-eabi -p dbc-rs -- -D warnings 2>&1; then
    echo -e "${GREEN}✓ dbc-rs no_std clippy check passed${NC}"
else
    echo -e "${RED}✗ dbc-rs no_std clippy check failed${NC}"
    FAILED=1
fi

# Run clippy on dbc-cli using latest stable (for better linting)
echo -e "\n${YELLOW}Running clippy on dbc-cli (using latest stable)...${NC}"
if rustup run stable cargo clippy --all-targets -p dbc-cli -- -D warnings 2>&1; then
    echo -e "${GREEN}✓ dbc-cli clippy check passed${NC}"
else
    echo -e "${RED}✗ dbc-cli clippy check failed${NC}"
    FAILED=1
fi

# Check formatting using pinned toolchain (from rust-toolchain.toml)
# This ensures consistent formatting across all workstations
echo -e "\n${YELLOW}Checking code formatting (using pinned toolchain)...${NC}"
if cargo fmt -- --check 2>&1; then
    echo -e "${GREEN}✓ Code formatting check passed${NC}"
else
    echo -e "${RED}✗ Code formatting check failed${NC}"
    echo -e "${YELLOW}Run 'cargo fmt' to fix formatting issues${NC}"
    FAILED=1
fi

# Exit with error if any check failed
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}Pre-commit checks failed. Please fix the issues above before committing.${NC}"
    echo -e "${YELLOW}To skip this hook, use: git commit --no-verify${NC}"
    exit 1
fi

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0

